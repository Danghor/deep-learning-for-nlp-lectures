%%To make your presentation use a shiny theme
\mode<presentation>{\usetheme{default}}

%% remove navigation from footer
\beamertemplatenavigationsymbolsempty

% don't show bookmarks on initial view
\hypersetup{pdfpagemode=UseNone} 
%% Add  frame number to the footer
\setbeamertemplate{footline}[frame number]


%% Add a gray heading like apple mac book
\definecolor{applegray}{RGB}{1,70,153}
\setbeamercolor{AppleGray}{fg=applegray,bg=applegray}

\setbeamertemplate{headline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.25ex,dp=1.5ex]{AppleGray}%
    \raggedright
    \hspace*{1em}%
    {\sffamily\Large\color{applegray}\thesection.~\insertsection\hfill\insertsubsection}%
    \hspace*{2em}%
  \end{beamercolorbox}%
  }%
}

